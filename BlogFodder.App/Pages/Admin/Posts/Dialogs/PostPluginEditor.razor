@using BlogFodder.Core.Plugins
@using BlogFodder.Core.Plugins.Interfaces
@using BlogFodder.Core.Plugins.Models

@if (Plugin != null)
{
    <DynamicComponent Type="@Plugin?.Editor?.Component"
                      Parameters="@(new Dictionary<string, object> {
                                      {"Plugin", PostPlugin},
                                      {"SaveAndClose", EventCallback.Factory.Create<Plugin>(this, SaveAndClose)}
                                  })"/>
}


@code {

    [Inject]
    public ExtensionManager ExtensionManager { get; set; } = default!;

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public Plugin PostPlugin { get; set; } = new();
    
    [Parameter]
    public IPlugin? Plugin { get; set; }

    public void SaveAndClose(Plugin data)
    {
        MudDialog.Close(DialogResult.Ok(data));
    }
}