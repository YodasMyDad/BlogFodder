@page
@using BlogFodder.Core
@using BlogFodder.Core.Extensions
@model BlogFodder.App.Pages.Account.ConfirmEmailModel
@{
    Layout = "Shared/_Layout";
}
@section Head {
    <title>Email Confirmation</title>
}

<div class="d-flex flex-column justify-content-center py-5 bg-light min-vh-100">
    <div class="mx-auto w-100" style="max-width: 28rem;">
        <div class="text-center">
            @if (Model.Settings?.LogoId == null)
            {
                <img src="@Constants.DefaultLogo" class="text-primary" alt="@Model.Settings?.SiteName Logo" width="50" height="50">
            }
            else
            {
                <img src="@Model.Settings.Logo!.Url?width=50" alt="@Model.Settings.SiteName Logo" width="50" height="50">   
            }
        </div>
        <h3 class="mt-4 text-center">
            Email confirmation
        </h3>
    </div>

    <div class="mt-3 mx-auto w-100" style="max-width: 28rem;">
        <div class="bg-white p-5 shadow rounded">
            <div>
                @if (Model.Result.Success)
                {
                    @foreach (var message in Model.Result.Messages.SuccessMessages())
                    {
                        <p class="text-success fs-5 text-center fw-bold">@Html.Raw(message.Message)</p>
                    }
                    
                    <div class="d-grid">
                        <a href="@Constants.Urls.Account.Login" class="btn btn-success btn-lg">Log In</a>
                    </div>
                }
                else
                {
                    @foreach (var error in Model.Result.Messages.ErrorMessages())
                    {
                        <p class="text-danger fs-5 text-center fw-bold">@error.Message</p>
                    }
                }
            </div>
        </div>
    </div>
</div>