@page
@using BlogFodder.Core.Extensions
@model BlogFodder.App.Pages.Account.ResetPasswordModel
@{
    Layout = "Shared/_Layout";
}
@section Head {
    <title>Reset Password</title>
    <meta name="description" content="" />
}

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">

        <component type="typeof(LogoImage)" param-Classes="@("mx-auto h-16 w-16 fill-current text-indigo-600")" render-mode="ServerPrerendered" />

        <h2 class="mt-4 text-center text-2xl font-bold text-gray-900">
            Reset your password
        </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            <form class="space-y-6" method="post">
                <div asp-validation-summary="All" class="font-medium text-red-400 text-sm text-center">
                    @if (Model.Result.Success)
                    {
                        <p class="font-medium text-green-400 text-base text-center">@Html.Raw(Model.Result.Messages.SuccessMessages().FirstOrDefault()!.Message)</p>
                    }
                </div>
                <input asp-for="ResetPasswordCommand.Code" type="hidden" />
                <div>
                    <label asp-for="ResetPasswordCommand.Email" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1">
                        <input asp-for="ResetPasswordCommand.Email" autocomplete="email" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                        <span asp-validation-for="ResetPasswordCommand.Email" class="text-red-400 text-xs"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ResetPasswordCommand.Password" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1">
                        <input asp-for="ResetPasswordCommand.Password" autocomplete="current-password" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                        <span asp-validation-for="ResetPasswordCommand.Password" class="text-red-400 text-xs"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="ResetPasswordCommand.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
                    <div class="mt-1">
                        <input asp-for="ResetPasswordCommand.ConfirmPassword" class="appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
                        <span asp-validation-for="ResetPasswordCommand.ConfirmPassword" class="text-red-400 text-xs"></span>
                    </div>
                </div>

                <div>
                    <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Reset Password
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScripts" />
}
