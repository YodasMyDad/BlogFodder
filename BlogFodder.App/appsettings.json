{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": ["Serilog.Sinks.File", "Serilog.Sinks.Console", "Serilog.Sinks.Async"],
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs\\log.txt",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message}{NewLine}{Exception}",
                "rollingInterval": "Day"
              }
            }
          ]
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithThreadId", "WithMachineName"]
  },
  "BlogFodder": {
    "DatabaseProvider": "Sqlite",
    "ConnectionString": "DataSource=app.db;Cache=Shared",
    "NewUserStartingRole": "Standard",
    "MaxUploadFileSizeInBytes": "5242880",
    "MaxImageSizeInPixels": "1000",
    "AllowedFileTypes": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".svg"
    ],
    "UploadFolderName": "uploads",
    "Favicon": "favicon.png",
    "FrontEnd": {
      "Styles": ["/css/styles.css"],
      "Scripts": [],
      "HeaderComponent": "BlogFodder.Plugins.Components.FrontEnd.Header",
      "FooterComponent": "BlogFodder.Plugins.Components.FrontEnd.Footer",
      "PostListComponent": "BlogFodder.Plugins.Components.FrontEnd.PostList",
      "PostListItemComponent": "BlogFodder.Plugins.Components.FrontEnd.PostListItem"
    },
    "BackOffice": {
      "CustomNavigationSections": [
        "Custom"
      ]
    },
    "Identity": {
      "ExternalProviders": {
        "Google": {
          "ClientId": "",
          "ClientSecret": ""
        },
        "Facebook": {
          "AppId": "",
          "AppSecret": ""
        },
        "Microsoft": {
          "ClientId": "",
          "ClientSecret": ""
        }
      }
    },
    "Email": {
      "SenderEmail": "name@websitename.co.uk",
      "Smtp": {
        "Host": "smtp.sendgrid.net",
        "Port": 587,
        "Username": "mail_username",
        "Password": "mail_password"
      }
    },
    "Plugins": {
      "IStorageProvider": "BlogFodder.Core.Providers.DiskStorageProvider"
    }
  }
}
