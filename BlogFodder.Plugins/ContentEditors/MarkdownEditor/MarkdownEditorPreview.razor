@using BlogFodder.Core.Posts.Models
@using Markdig
@implements BlogFodder.Core.Plugins.Interfaces.IEditorPluginComponentPreview

@((MarkupString)Markdown.ToHtml(HtmlToShow))

@code {
    private string HtmlToShow { get; set; } = string.Empty;
    
    [Parameter]
    public PostContentItem? PostContentItem { get; set; }

    protected override void OnParametersSet()
    {
        HtmlToShow = PostContentItem?.PluginData ?? $"Markdown Editor - Preview generated by {nameof(MarkdownEditorPreview)}";
    }
}