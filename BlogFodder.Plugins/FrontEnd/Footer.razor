@using BlogFodder.Core.Settings
@using Microsoft.Extensions.Options

<footer class="bg-secondary-subtle mt-6">
    <div class="container">
        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4">
            <p class="col-md-4 mb-0 text-muted">&copy; @DateTime.Now.Year SiteName TODO</p>

            <ul class="nav col-md-4 justify-content-end">
                @foreach (var footerNav in Settings.Value.FrontEnd.SiteNavigation.FooterNav)
                {
                    <li>
                        <a href="@footerNav.Link" class="nav-link px-2 text-muted">@footerNav.Link</a>
                    </li>
                }
            </ul>
        </footer>
    </div>
</footer>

@code{

    [Inject]
    IOptionsSnapshot<BlogFodderSettings> Settings { get; set; } = default!;

}