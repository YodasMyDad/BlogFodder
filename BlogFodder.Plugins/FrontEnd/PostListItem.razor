@using BlogFodder.Core.Posts.Models
@using Humanizer

<a href="/post/@Post.Url" class="block flex flex-col overflow-hidden rounded-lg shadow-lg">
    <div class="flex-shrink-0">
        <img class="h-48 w-full object-cover" src="@Post.FeaturedImage?.Url?width=400" alt="">
    </div>
    <div class="flex flex-1 flex-col justify-between bg-white p-6">
        <div class="flex-1">
            <p class="text-sm font-medium text-indigo-600">
                Categories Here
            </p>
            <div class="mt-2 block">
                <p class="text-xl font-semibold text-gray-900">@Post.Name</p>
                <p class="mt-3 text-base text-gray-500">@Post.Excerpt</p>
            </div>
        </div>
        <div class="mt-6 flex items-center">
            <div class="flex-shrink-0">
                <div>
                    <span class="sr-only">Users Name</span>
                    <img class="h-10 w-10 rounded-full" src="https://images.unsplash.com/photo-1550525811-e5869dd03032?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                </div>
            </div>
            <div class="ml-3">
                <p class="text-sm font-medium text-gray-900">
                    Users Name
                </p>
                <div class="flex space-x-1 text-sm text-gray-500">
                    <time>@Post.DateUpdated.Humanize()</time>
                </div>
            </div>
        </div>
    </div>
</a>

@code {

    [Parameter]
    public Post Post { get; set; } = default!;

}