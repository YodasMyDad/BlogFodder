@inherits LayoutComponentBase

<MudThemeProvider/>
@*<MudDialogProvider/>
<MudSnackbarProvider/>*@

<HeadContent>
    <meta name="main" content="Hello from main">
</HeadContent>

<div class="page">
    <div class="sidebar">
        @HeaderContent
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            <CascadingValue Value="this">
                @Body
            </CascadingValue>
        </article>
    </main>
</div>

@code {
    RenderFragment HeaderContent => _sideBar?.ChildContent!;
    SideBar? _sideBar;

    public void SetSideBar(SideBar? sideBar)
    {
        _sideBar = sideBar;
        Update();
    }

    public void Update() => StateHasChanged();
}